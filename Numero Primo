    static boolean primo (int numerop){
        int r, t, p;
        r=numerop%1;
        t=numerop%numerop;
        p=numerop%2;
        
        
        if ((r==0&& || t==0)&& p!=0){
            return true;
        }else{
            return false;
        }
    
    }
