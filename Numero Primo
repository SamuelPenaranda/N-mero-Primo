package javaapplication10;

import javax.swing.JOptionPane;

/**
 *
 * @author SALA
 */
public class JavaApplication10 {
   static boolean primo (int numerop){
        int r, t, p;
        r=numerop%1;
        t=numerop%numerop;
        p=numerop%2;
        
        
        if ((r==0&&  t==0)&& p!=0){
            return true;
        }else{
            return false;
        }
    
    }
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
         char continuar='S';
        while(continuar=='S');
        String entrada=JOptionPane.showInputDialog(null, "Ingrese el año");
        
        int numerop=Integer.parseInt(entrada);
        if(primo(numerop)==true){
            JOptionPane.showInputDialog(null, "El número es primo");
        }else{
            JOptionPane.showInputDialog(null, "El Número no es primo");
        }
        continuar=JOptionPane.showInputDialog(null,"Desea Continuar Si/No").charAt(0);
        }
        // TODO code application logic here
    }
        // TODO code application logic here
    
